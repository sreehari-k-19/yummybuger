<%- include('../partials/admin-navbar.ejs') %>

    <main>
        <!-- <div style="display:flex; justify-content: space-between;">
    </div> -->
        <div class="container">
            <div class="order-details">

                <div class="order-details-head">
                    <div class="order-details-headbox">
                        <h4>Date</h4>
                        <p style="font-size:15px;">
                            <%= order[0].date%>
                        </p>
                    </div>
                    <div class="order-details-headbox">
                        <h5>Total amount</h5>
                        <p style="font-size: 18px;margin-bottom: 1rem; "><i class="bi bi-currency-rupee"></i>
                            <%= order[0].totalamount.total + order[0].totalamount.discount %>
                        </p>
                        <div style="display:flex ;">
                            <h5 style="font-size: 15px;">Sub total : </h5>
                            <p style="font-size: 12px; color: green;margin-bottom: 0; "><i
                                    class="bi bi-currency-rupee"></i>
                                <%= order[0].totalamount.total %>
                            </p>

                        </div>
                        <div style="display:flex ;">
                            <h5 style="font-size: 15px;">Discount : </h5>
                            <p style="font-size: 12px; color: red;"><i class="bi bi-currency-rupee"></i>
                                <%= order[0].totalamount.discount %>
                            </p>

                        </div>

                    </div>
                    <div class="order-details-headbox">
                        <h4>Address</h4>
                        <p></p>
                    </div>
                    <div class="order-details-headbox">
                        <h4>Status</h4>
                        <p style="font-size:22px; color: red;font-weight: 800;">
                            <%= order[0].orderstatus %>
                        </p>
                    </div>
                </div>
                <div class="my-5 order-details-address">
                    <div>
                        <h4>Address</h4>
                        <div>
                            <p><span>Name :</span><%= order[0].deliverydetails.firstname %></p>
                            <p><span>Adrress :</span><%= order[0].deliverydetails.address %></p>
                            <div class="d-flex">
                                <p><span>Landmark :</span><%= order[0].deliverydetails.landmark %></p>
                                <p><span>Pincode :</span><%= order[0].deliverydetails.pincode %></p>
                            </div>
                            <div class="d-flex">
                                <p><span>City :</span><%= order[0].deliverydetails.city %></p>
                                <p><span>State :</span><%= order[0].deliverydetails.state %></p>
                            </div>
                            <div class="d-flex">
                                <p><span>Email:</span><%= order[0].deliverydetails.email %></p>
                                <p><span>Phonenum:</span><%= order[0].deliverydetails.phonenum %></p>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="order-details-products my-5">
                    <h4>Products</h4>

                    <div class="order-product-details">

                        <% order.forEach(function(order){ %>
                            <div class="order-product-details-box">
                                <div class="order-product-details-img">
                                    <img src="../../images/burger1.png">
                                </div>
                                <div class="nqp mx-4 my-2">
                                    <p>
                                        <%= order.product.productname %>
                                    </p>
                                    <p><span>QTY : </span>
                                        <%= order.quantity %>
                                    </p>
                                    <p><i class="bi bi-currency-rupee"></i>
                                        <%= order.product.price %>
                                    </p>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>

            </div>
        </div>

        <p class="copyright">

            &copy; 2022 - <span>YUMMY BURGER</span> All Rights Reserved.
        </p>
    </main>