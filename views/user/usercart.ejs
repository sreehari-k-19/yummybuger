<div class="cart navfull">
    <%- include('../partials/user-navbar.ejs') %>

        <div class="container-fluid">
            <div class="cart-container">
                <div class="cart-header container">
                    <h3>Woo hoo! let`s complete your order, shall we?</h3>
                </div>
                <div class="cart-section my-5">
                    <div class="cart-body">
                        <div>
                            <% cartItems.forEach(function(cartItem){%>
                                <div class="cart-item py-2">

                                    <div class=cart-details>
                                        <div class="product-img">
                                            <img src="/uploads/<%= cartItem.product.images[0] %>">
                                        </div>
                                        <div class="product-details">
                                            <p class="product-name">
                                                <%= cartItem.product.productname %>
                                            </p>
                                            <p class="product-price">
                                                <i class="bi bi-currency-rupee"><%= cartItem. product.price %></i>
                                            </p>
                                            <p class="product-description">
                                                <%= cartItem.product.desription %>
                                            </p>

                                        </div>

                                    </div>
                                    <div class="item-total">
                                        <h3> <i class="bi bi-currency-rupee">
                                                <%= cartItem. product.price %>
                                            </i></h3>
                                    </div>
                                    <div class="cart-item-button">
                                        <div class="cart-buttons">
                                            <%= console.log(userAccount) %>
                                            <div class="cart-item-in"
                                                onclick="changeQuantity('<%= cartItem._id %>','<%= cartItem.product._id %>',1,'<%= cartItem.product.productname %>','<%= userAccount.id %>')">
                                                +</div>


                                            <div class="cart-item-count"><span id="<%= cartItem.product._id %>">
                                                    <%= cartItem.quantity%>
                                                </span></div>


                                            <div class="cart-item-de"
                                                onclick="changeQuantity('<%= cartItem._id %>','<%= cartItem.product._id %>',-1,'<%= cartItem.product.productname %>','<%= userAccount.id %>')">
                                                -</div>

                                        </div>
                                    </div>
                                    <div class="cart-item-cancel">
                                        <a href="">
                                            <div class="" onclick=" deletecartProduct('<%= cartItem._id %>','<%= cartItem.product._id %>','<%= cartItem.product.productname %>')"><i style="color:#FEA116 ;" class="bi bi-x-lg"></i></div>
                                        </a>
                                    </div>
                                </div>
                                <%}); %>

                        </div>

                        <div class="buy-section">
                            <div>

                                <div class="cart-total-buy">
                                    <div class="subtotal-card my-2"><span style="color:#007933;">Your order is eligible for
                                            FREE Delivery.<br></span> Select this option at checkout. </div>
                                    <div class="cart-subtotal my-4">Subtotal (<%= cartCount %> items): <i class="bi bi-currency-rupee"></i><span id="total-value"><%= cartTotal %>  </span></div>
                                    <div class="proccessedtobuy"><a href="/checkout">proceed to Buy</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <%- include('../partials/user-footer.ejs') %>
</div>



<script>
    
</script>